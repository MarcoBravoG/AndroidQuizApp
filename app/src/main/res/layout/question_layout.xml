<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/categories_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/question_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/question_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/question_id"
        android:layout_alignBottom="@+id/question_id"
        android:layout_toEndOf="@+id/question_id"
        android:layout_toRightOf="@+id/question_id"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_id"
        android:layout_toEndOf="@+id/question_id"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_toEndOf="@+id/question_id"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/options"
        android:layout_toEndOf="@+id/question_id"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/answer"
        android:background="@color/grey" />

</RelativeLayout>